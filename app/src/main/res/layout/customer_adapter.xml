<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:layout_goneMarginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Jul 6, 2022 4:44:04 PM"
            android:textColor="@color/gray"
            android:visibility="gone"
            android:textSize="15dp"
            android:padding="5dp"
            android:fontFamily="@font/librebaskerville_bold"
            android:id="@+id/DataTime"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/leads"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/LeadsImage"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jul 6, 2022 4:44:04 PM"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:fontFamily="@font/librebaskerville_bold"
                android:id="@+id/L_LeadName"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:src="@drawable/dots"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:id="@+id/Edit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/customers1"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/CustomerImage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:id="@+id/count"
                    android:text="1"
                    android:visibility="gone"
                    android:gravity="end"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/name_icon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CustomerName"
                        android:id="@+id/CustomerName"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/opensans"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shop_icon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ShopName"
                        android:id="@+id/ShopName"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:fontFamily="@font/opensans"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone_icon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567890"
                        android:layout_gravity="center"
                        android:id="@+id/MobileNumber"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColorLink="@color/red"
                        android:autoLink="phone"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/opensans"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/area_icon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area"
                        android:id="@+id/Area"
                        android:textStyle="bold"
                        android:autoLink="map"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/purple"
                        android:fontFamily="@font/opensans"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/red"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/EditText"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:backgroundTint="@color/blue"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:id="@+id/DetailText"/>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>